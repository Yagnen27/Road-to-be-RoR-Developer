<div class="col-lg-12">
    <div class="card rounded-0 mb-5 mt-5">
     <div class="card-body">
        <h2 class="text-center">Create New User</h2>
    </div>
    </div>

    <%= form_with model: @user do |form| %>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :first_name, class: 'mb-2' %>
                <%= form.text_field :first_name, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :last_name, class: 'mb-2' %>
                <%= form.text_field :last_name, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :contact, class: 'mb-2' %>
                <%= form.text_field :contact, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :email, class: 'mb-2' %>
                <%= form.text_field :email, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
         <div class="col-lg-8">
            <div class="form-group">
                <%= form.label :address, class: 'mb-2' %>
                <%= form.text_field :address, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :city, class: 'mb-2' %>
                <%= form.text_field :city, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :state, class: 'mb-2' %>
                <%= form.text_field :state, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
         <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :pincode, class: 'mb-2' %>
                <%= form.text_field :pincode, class: 'form-control form-control-lg rounded-0' %>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12 mt-3">
            <%= form.submit class: 'btn btn-primary btn-lg rounded-0'%>
            <%= link_to "Back To Users", users_path, class: "btn btn-outline-primary btn-lg rounded-0" %>
        </div>
    </div>
    <% end %>
</div>
